<page modules="fields tasks">
  <heading>EMARCS Data Management App</heading>
  <task-sequence id="tasksequence">
    <task-wrapper label="Step 1 - Course Information">
      <task-set id="taskset1">
	<text-input id="instructor" label="Name of instructor"/>
	<text-input id="institution" label="Institution"/>
	<multiple-choice id="course" label="Is this data from Calc II or Statics?">
	  Calc II
	  Statics
	</multiple-choice>
	<multiple-choice id="condition" label="Is this an intervention or control section?">
	  Intervention
	  Control
	</multiple-choice>
      </task-set>
    </task-wrapper>
    <task-wrapper label="Step 2 - Roster">
      <task-set id="taskset2">
	<spreadsheet-selector id="roster" label="Master Student Roster"/>
      </task-set>
    </task-wrapper>
    <task-wrapper label="Step 3 - Data Files">
      <task-set id="taskset3">
	<spreadsheet-selector id="mct_pre" label="MCT Pretest"/>
      </task-set>
    </task-wrapper>
    <task-wrapper label="Step 4 - Target Columns">
      <task-set id="taskset4">
	<toggle id="dummy_task"/>
      </task-set>
    </task-wrapper>
    <task-wrapper label="Step 5 - Review and Submit">
      <task-set id="taskset5">
	<validation id="validation"/>
      </task-set>
    </task-wrapper>
  </task-sequence>
</page>
