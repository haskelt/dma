<page modules="status fields tasks">
  <content>
    <task-sequence id="tasksequence">
      <task-wrapper label="Step 1 - Course Information">
	<task-set id="taskset1">
	  <text-input id="instructor" label="Name of instructor"/>
	  <text-input id="institution" label="Institution"/>
	  <multiple-choice id="course" label="Is this data from Calc II or Statics?">
	    Calc II
	    Statics
	  </multiple-choice>
	  <multiple-choice id="condition" label="Is this an intervention or control section?">
	    Intervention
	    Control
	  </multiple-choice>
	  <multiple-choice id="modality" label="Course modality">
	    F2F
	    On-line
	  </multiple-choice>
	  <select id="term" label="What term was this data collected?">
	    Fall 2019
	    Winter 2020
	    Spring 2020
	    Fall 2020
	    Winter 2021
	    Spring 2021
	    Fall 2021
	    Winter 2022
	    Spring 2022
	  </select>
	</task-set>
      </task-wrapper>
      <task-wrapper label="Step 2 - Roster and Consent">
	<task-set id="taskset2">
	  <spreadsheet-selector id="_roster" label="Master Student Roster"/>
	  <spreadsheet-selector id="demographics" label="Consent and Demographics"/>
	</task-set>
      </task-wrapper>
      <task-wrapper label="Step 3 - Data Files">
	<task-set id="taskset3">
	  <spreadsheet-selector id="pretest1" label="Pretest 1" optional="true"/>
	  <spreadsheet-selector id="pretest2" label="Pretest 2" optional="true"/>
	  <spreadsheet-selector id="pretest3" label="Pretest 3" optional="true"/>
	  <spreadsheet-selector id="test1" label="Test 1" optional="true"/>
	  <spreadsheet-selector id="test2" label="Test 2" optional="true"/>
	  <spreadsheet-selector id="test3" label="Test 3" optional="true"/>
	  <spreadsheet-selector id="psvt_pre" label="PSVT-R Pretest" optional="true"/>
	  <spreadsheet-selector id="psvt_post" label="PSVT-R Posttest" optional="true"/>
	</task-set>
      </task-wrapper>
      <task-wrapper label="Step 4 - Export">
	<task-set id="taskset4">
	  <export-button id="export" label="Export"/>
	</task-set>
      </task-wrapper>
    </task-sequence>
  </content>
  <sidebar>
    <status/>
  </sidebar>
</page>
