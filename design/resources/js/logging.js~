class DebugMessageManager {

/*****************************************************************************/

    constructor () {
	
	this.namespaces_to_post = [ ];

    } // constructor

/*****************************************************************************/

    postDebugMessage = function (namespace, message) {
    // will post for the specified namespace and all child namespaces of it
    
    for(let namespace_to_post of this.namespaces_to_post){
	if(namespace.startsWith(namespace_to_post)){
	    console.log("<" + namespace + "> " + message);
	    break;
	}
    }
    
    } // postDebugMessage

/*****************************************************************************/

}

export default new DebugMessageManager();
