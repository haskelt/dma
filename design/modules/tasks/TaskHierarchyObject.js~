class TaskHierarchyObject {

/*****************************************************************************/

    constructor (element) {

	this.id = element.id;
	this.parent = null;
	this.children = [];
	
    } // constructor

/******************************************************************************/

    setParent (parent) {

	this.parent = parent;

    } // setParent
    
/******************************************************************************/

    addChild (child) {

	this.children.push({ 'object': child, 'status': null });
	console.log('Set ' + child.id + ' as child of ' + this.id);

    } // addChild

/******************************************************************************/

    setChildStatus (child, status) {
	console.log('Changing status of ' + child.id + ' on ' + this.id);

	for(let entry of this.children){
	    console.log(entry['object'].id);
	}
	var childIndex = this.children.findIndex(entry => entry['object'].id == child.id);
	this.children[childIndex]['status'] = status;
	
    } // setChildStatus
    
/******************************************************************************/
    
} // TaskHierarchyObject

export default TaskHierarchyObject;
